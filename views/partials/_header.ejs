<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(username){ %>
          <form class="form-inline navbar-form navbar-right" method="POST" action="/logout">
            <div class="form-group  mx-auto mb-2">
              <h5>Logged In: <%= username %></h5>
              <button type="submit" class="btn btn-primary">Logout</button>
            </div>
          </form>
        <% } else { %>  
          <form class="form-inline navbar-form navbar-right" method="POST" action="/login">
            <div class="form-group  mx-auto mb-2">
            <input class="form-control" type="text" name="username" placeholder="username" style="width: 300px; margin: 1em">
            <button type="submit" class="btn btn-primary">Sign In</button>
            </div>
        </form>
        <% } %> 
      </div>
    </div>
  </nav>
</header>